<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="atlassian-licensing-enabled">false</param>
    </plugin-info>
    
 	<component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>
    <component-import key="soyTemplateRenderer" interface="com.atlassian.soy.renderer.SoyTemplateRenderer"/>
    <component-import key="repositoryService" interface="com.atlassian.bitbucket.repository.RepositoryService"/>
    <component-import key="pullRequestService" interface="com.atlassian.bitbucket.pull.PullRequestService"/>
    <component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory"/>
    <component-import key="schedulerService" interface="com.atlassian.scheduler.SchedulerService"/>
    <component-import key="webResourceUrlProvider" interface="com.atlassian.plugin.webresource.WebResourceUrlProvider"/>
    <component-import key="loginUriProvider" name="Login URI provider" interface="com.atlassian.sal.api.auth.LoginUriProvider" />
    
    <component key="JenkinsIntergration" class="com.harms.bitbucket.plugin.jenkins.job.intergration.JenkinsJobTrigger" public="true">
        <interface>com.harms.bitbucket.plugin.jenkins.job.intergration.JobTrigger</interface>
    </component>
    <component key="bitbucketEventListener" class="com.harms.bitbucket.plugin.jenkins.job.intergration.BitbucketEventListener"/>

	<servlet name="SettingsServlet" key="settingsServlet" class="com.harms.bitbucket.plugin.jenkins.job.settings.servlet.JenkinsIntegrationPluginSettingsServlet">
        <description key="settingsServlet.description">The Jenkins plug-in settings servlet</description>
        <url-pattern>/jenkins/settings/*</url-pattern>
    </servlet>
    
    <servlet name="ManualTriggerBuildServlet" key="manualTriggerBuildServlet" class="com.harms.bitbucket.plugin.jenkins.job.settings.servlet.ManualTriggerBuildServlet">
        <description key="manualTriggerBuildServlet.description">The manual trigger job servlet</description>
        <url-pattern>/jenkins/manualtrigger/*</url-pattern>
    </servlet>
    
    <servlet name="ScheduledJobTriggerInfoServlet" key="scheduledJobTriggerInfoServlet" class="com.harms.bitbucket.plugin.jenkins.job.settings.servlet.ScheduledJobTriggerInfoServlet">
        <description key="scheduledJobTriggerInfoServlet.description">Retrieve registered schedule job trigger for a pull request</description>
        <url-pattern>/jenkins/scheduledtriggers/*</url-pattern>
    </servlet>

	<client-resource key="setting-soy" name="Jenkins Pull Request Integration Templates">
        <directory location="/static/"/>
    </client-resource>
    
    <web-resource key="pr-overview-resources">
        <transformation extension="soy">
            <transformer key="soyTransformer" />
        </transformation>

        <transformation extension="less">
            <transformer key="less-transformer" />
        </transformation>

        <resource type="download" name="pull-request-overview.soy.js" location="/static/pull-request-overview.soy" />
        <resource type="download" name="pull-request-overview.js" location="/static/pull-request-overview.js"/>
        <resource type="download" name="pull-request-overview.css" location="/static/pull-request-overview.less" />
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.bitbucket.server.bitbucket-web-api:pull-request-web-panels</dependency>
    </web-resource>

    <client-web-panel key="disable-automatic-build" location="bitbucket.pull-request.links">
        <resource name="view" type="soy" location="com.harms.bitbucket.jenkins-integration-plugin:pr-overview-resources/bitbucket.config.jenkins.job.integration.disableAutomaticBuildForm" />
		<resource type="download" name="pull-request-overview.js" location="/static/pull-request-overview.js"/>
        <client-condition>PULLREQUEST._pullRequestIsOpen</client-condition>
    </client-web-panel>
    
    <web-panel key="schedule-job-trigger-message" location="bitbucket.notification.banner.header">
        <resource name="view" type="static"><![CDATA[<div id="schedule-job-trigger-message"></div><div id="disable-automatic-build-message"></div>]]></resource>
    </web-panel>

    <client-web-panel key="scheduled-job-trigger" location="bitbucket.pull-request.links">
        <resource type="download" name="scheduled-job-trigger.js" location="/static/scheduled-job-trigger.js"/>
        <client-condition>JOBTRIGGER._pullRequestIsOpen</client-condition>
    </client-web-panel>
    
    <web-item key="jenkins-settings-plugin-tab" name="Jenkins settings navigation tab"
              section="bitbucket.repository.settings.panel/repository-settings-section" weight="50">
        <label>Jenkins pull request integration</label>
        <link>/plugins/servlet/jenkins/settings/${repository.project.key}/${repository.slug}/</link>
        <tooltip>Automatically trigger a Jenkins job when a pull request is created or updated</tooltip>
    </web-item>
    <component-import key="pluginLicenseManager" interface="com.atlassian.upm.api.license.PluginLicenseManager"/>
</atlassian-plugin>
